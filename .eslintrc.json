{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "globals": {
    "Spree": "readonly",
    "$": "readonly",
    "Turbolinks": "readonly"
  },
  "extends": [
    "eslint:recommended",
    "plugin:jquery/slim"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "prefer-const": "warn",
    "no-var": "warn",
    "prefer-template": "warn",
    "no-shadow": "error",
    "no-alert": "error",
    "no-debugger": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"]
  }
}
